extends ../layout

block content
  h2.page-header パスワードをリセットする
  form.form-horizontal.main-form(action='javascript:void(0)', accept-charset='utf-8', data-url='/user/resetpassword', data-redirect='/auth/signin')
    input(type='hidden', name='_csrf', value='#{ _csrf }')
    fieldset
      .form-group
        label.col-md-3.control-label(for='email') メールアドレス
        .col-md-9
          input.form-control#email(type='email', name='email', placeholder='メールアドレス')
      .form-group
        label.col-md-3.control-label(for='password') 新しいパスワード
        .col-md-9
          input.form-control#password(type='password', name='password', placeholder='パスワード')
      .form-group
        label.col-md-3.control-label(for='password_confirmation') メールアドレス
        .col-md-9
          input.form-control#password_confirmation(type='password', name='password_confirmation', placeholder='パスワードの確認')
      .form-group
        label.col-md-3.control-label(for='confirmation_code') 確認コード
        .col-md-9
          input.form-control#confirmation_code(name='confirmation_code', placeholder='確認コード')
      .form-group
        .col-md-offset-3.col-md-9
          button.btn.btn-primary パスワードを変更する
