extends ../layout

block content
  h2.page-header パスワードをリセットする
  form.form-horizontal.main-form(action='javascript:void(0)', accept-charset='utf-8', data-url='/auth/forgotpassword', data-redirect='/support/resetpassword')
    input(type='hidden', name='_csrf', value='#{ _csrf }')
    fieldset
      .form-group
        label.col-md-3.control-label(for='email') メールアドレス
        .col-md-9
          input.form-control#email(type='email', name='email', placeholder='メールアドレス')
      .form-group
        .col-md-offset-3.col-md-9
          button.btn.btn-primary 確認メールを送信する
